generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
//  folders   Folder[]
//  files     File[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Folder {
  id        String    @id @default(cuid())
  name      String
  path      String
  parentId  String?
  parent    Folder?   @relation("FolderToFolder", fields: [parentId], references: [id])
  children  Folder[]  @relation("FolderToFolder")
  files     File[]
  status    String?   @default("pending") // "pending" | "completed"
 // userId    String
 // user      User      @relation(fields: [userId], references: [id])
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model File {
  id           String    @id @default(cuid())
  name         String
  path         String
  type         String
  folderId     String
  folder       Folder    @relation(fields: [folderId], references: [id])
  packageName  String?
  className    String?
  dependencies String?   // JSON string for dependencies
  methods      Method[]  // 1:N relation with Method
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Method {
  id            String   @id @default(cuid())
  methodName    String?
  returnType    String?
  parameters    String?
  httpMethod    String?  // Controller용
  path          String?  // Controller용
  errorMessage  String?  // Exception용
  errorCode     String?  // Exception용
  exceptionType String?  // Exception용
  fullMethod    String?
  fileId        String
  file          File     @relation(fields: [fileId], references: [id])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}